<Page x:Class="Polimer.MyPages.CpravochPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:Polimer.MyPages"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="Страница справочников" Background="Transparent">

    <Grid>
        <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center">
            <StackPanel  Orientation="Horizontal">
                <StackPanel>
                    <Button x:Name="BMaterial" Content="Материалы" FontSize="30" Style="{StaticResource MenuButton}" Click="BMaterial_Click"/>
                    <Button x:Name="BTip" Content="Тип" FontSize="30" Style="{StaticResource MenuButton}" Click="BTip_Click"/>
                    <Button x:Name="BEdIzmer" Content="Единицы измерения" FontSize="30" Style="{StaticResource MenuButton}" Click="BEdIzmer_Click"/>

                </StackPanel>
                <StackPanel>
                    <Button x:Name="BPostav" FontSize="30" Content="Поставщик" Style="{StaticResource MenuButton}" Click="BPostav_Click"/>
                    <Button x:Name="BCklad" FontSize="30" Content="Склад" Style="{StaticResource MenuButton}" Click="BCklad_Click"/>
                    <Button x:Name="BCtelag" FontSize="30" Content="Стеллаж" Style="{StaticResource MenuButton}" Click="BCtelag_Click"/>

                </StackPanel>
            </StackPanel>
            <Button x:Name="BPolych" Content="Получатель" FontSize="30" Style="{StaticResource MenuButton}" Click="BPolych_Click"/>
        </StackPanel>
    </Grid>
</Page>
